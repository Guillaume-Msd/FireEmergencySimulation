package emergency;

import utilities.Coord;

public class Staff extends Intervernors {

	private TiredStateEnum TiredState;

	private boolean Available;
	
	private String nom;
	
	private Coord coordonnees;
	

	/**
	 * 
	 * @param coord
	 * Cette fonction crée un membre du personnel (en pleine forme et disponible) aux coordonnées spécifiées
	 */
	public Staff(Coord coord,String nom) {
		this.setTiredState(TiredStateEnum.En_pleine_forme);
		this.setAvailable(true);
		this.setNom(nom);
		this.setCoordonnees(coord);
	}
	
	public Staff(Coord coord) {
		this(coord,"Inconnu");
	}
	
	public Staff() {
		this(new Coord(0,0));
	}

	/**
	 * @return the tiredState
	 */
	public TiredStateEnum getTiredState() {
		return TiredState;
	}

	/**
	 * @param tiredState the tiredState to set
	 */
	public void setTiredState(TiredStateEnum tiredState) {
		TiredState = tiredState;
	}
	
	/**
	 * 
	 */
	public void seFatiguer() {
		this.getTiredState();
		this.setTiredState(TiredStateEnum.values()[this.getTiredState().ordinal()+1]);
	}
	
	/**
	 * @return the available
	 */
	public boolean isAvailable() {
		return Available;
	}

	/**
	 * @param available the available to set
	 */
	public void setAvailable(boolean available) {
		Available = available;
	}

	/**
	 * @return the nom
	 */
	public String getNom() {
		return nom;
	}

	/**
	 * @param nom the nom to set
	 */
	public void setNom(String nom) {
		this.nom = nom;
	}

	/**
	 * @return the coordonnees
	 */
	public Coord getCoordonnees() {
		return coordonnees;
	}

	/**
	 * @param coordonnees the coordonnees to set
	 */
	public void setCoordonnees(Coord coordonnees) {
		this.coordonnees = coordonnees;
	}
	
	/*
	 * @returns a string that descries the object staff
	 */
	@Override
	public String toString() {
		String str = "";
		str = str + "Nom:	" + this.getNom() + "\n";
		str = str + "Disponible:	" + this.isAvailable() + "\n";
		str = str + "Etat de fatigue:	" + this.getTiredState().toString() + "\n";
		str = str + "Est aux coordonnées:	" + this.getCoordonnees();
		return str; 
	}
	
	/**
	 * Test unitaire
	 */
	public static void main(String[] args) {
		Staff personnel = new Staff();
		personnel.seFatiguer();
		System.out.println(personnel);
	}
}